{
    "openapi": "3.0.0",
    "info": {
        "title": "Price comparison",
        "version": "1.0.0",
        "description": "Compare the price ratio of two products of different sizes"
    },
    "paths": {
        "/calculate": {
            "post": {
                "tags": ["Calculate"],
                "summary": "Get the price relational",
                "description": "Recceives value, amount and type from product 1. The types are Kg,g,ml or L. Also, type and amount from product 2. The response is a JSON file with the value for product 2",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type1": {
                                        "type": "string"
                                    },
                                    "type2": {
                                        "type": "string"
                                    },
                                    "amount1": {
                                        "type": "number"
                                    },
                                    "value1": {
                                        "type": "number"
                                    },
                                    "amount2": {
                                        "type": "number"
                                    }
                                },
                                "example": {
                                    "type1": "g",
                                    "type2": "Kg",
                                    "amount1": 500,
                                    "value1": 10,
                                    "amount2": 4
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Succes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }  
                            }
                        }
                    }
                }
            }
        },
        "/teste": {
            "get": {
                "tags": ["Teste"],
                "summary": "A simple test for front-end",
                "description": "A simple test for front-end",
                "responses": {
                    "200": {
                        "description": "Succes",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object"
                                },
                                "properties": {
                                    "message": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }

}